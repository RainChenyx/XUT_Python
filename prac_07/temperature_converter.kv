BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            font_size: 48
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert Celsius to Fahrenheit'
        on_press: app.handle_calculate_fahrenheit()
    Button:
        text: 'Convert Fahrenheit to Celsius'
        on_press: app.handle_calculate_celsius()
    Label:
        id: output_label
        font_size: 48
        text: '0'
        color: (1, 1, 0, 1)
